    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "runtimeVersion": "16.16.0",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/.bin/mocha",
